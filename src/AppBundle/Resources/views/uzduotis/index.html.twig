{% extends '@App/base.html.twig' %}

{% block body %}
    <p class="text-center h1">Hello {{ user.firstName }}!
    </p>
<div class="container">



    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-5 col-sm-offset-2 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">You can change your information </h3>
                </div>
                <div class="panel-body">

                    {{ form_start(form)  }}
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.country) }}
                    {{ form_row(form.city) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.plainPassword.first) }}
                    {{ form_row(form.plainPassword.second) }}


                    <button class="btn btn-large btn-primary" type="submit">Change!</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-5 col-sm-offset-2 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">You can log out </h3>
                </div>
                <div class="panel-body">

                    <h2> You can log out</h2>

                    <a href="{{ path('logout') }}"><div class="btn btn-large btn-primary">Log Out</div></a>

            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>

    </style>
{% endblock %}
